{% schema %}
{
  "name": "Hero Unisa",
  "settings": [
    { "type": "image_picker", "id": "hero_image", "label": "Imagen de fondo" },
    { "type": "text", "id": "hero_heading", "label": "Título (mayúsculas)", "default": "NUEVA COLECCIÓN" },
    { "type": "url", "id": "hero_link", "label": "Enlace del botón" },
    { "type": "text", "id": "hero_button_text", "label": "Texto del botón", "default": "VER TODO" }
  ],
  "presets": [{ "name": "Hero Unisa" }]
}
{% endschema %}

<section class="hero-unisa">
  <div class="hero-unisa__bg"
       style="background-image: url({{ section.settings.hero_image | img_url: '1600x' }});">
    <div class="hero-unisa__overlay"></div>
    <div class="hero-unisa__content">
      <h1 class="hero-unisa__title">{{ section.settings.hero_heading }}</h1>
      {% if section.settings.hero_link %}
        <a href="{{ section.settings.hero_link }}" class="hero-unisa__btn">
          {{ section.settings.hero_button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
.hero-unisa {
  position: relative;
  width: 100%;
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-unisa__bg {
  position: relative;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
}

.hero-unisa__overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.7);
}

.hero-unisa__content {
  position: relative;
  z-index: 10;
  color: #FFF;
  text-align: center;
  padding: 1rem;
}

.hero-unisa__title {
  font-family: "Times New Roman", serif;
  font-size: 3rem;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  margin-bottom: 1rem;
}

.hero-unisa__btn {
  display: inline-block;
  background: #000;
  color: #FFF;
  padding: 0.75rem 2rem;
  border: none;
  text-transform: uppercase;
  transition: background 0.3s ease;
}

.hero-unisa__btn:hover {
  background: #333;
}

@media screen and (max-width: 768px) {
  .hero-unisa__title {
    font-size: 2rem;
  }
  .hero-unisa__btn {
    padding: 0.6rem 1.5rem;
  }
}
</style>
