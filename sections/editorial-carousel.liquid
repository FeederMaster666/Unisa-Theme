<style>
.editorial-carousel .swiper-slide {
  display: flex;
  align-items: stretch;
  height: auto; /* se ajusta al contenido */
}

.editorial-carousel .post-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr; /* mitad imagen, mitad texto */
  background: #000; /* color de fondo negro como separación */
  height: 100%;
}

.editorial-carousel .picture-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.editorial-carousel .text-wrapper {
  background: #fff;
  padding: 40px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.editorial-carousel .text-wrapper h3 {
  font-size: 12px;
  text-transform: uppercase;
  margin-bottom: 10px;
  color: #666;
}

.editorial-carousel .text-wrapper .title {
  font-size: 28px;
  font-family: "Span", serif;
  margin-bottom: 15px;
  display: block;
}

.editorial-carousel .text-wrapper .button {
  font-size: 14px;
  text-decoration: underline;
  color: #000;
}

</style>

<div class="editorial-carousel swiper-container">
  <ul class="swiper-wrapper">
    {% for block in section.blocks %}
      <li class="child-post swiper-slide">
        <div class="post-wrapper">
          <!-- Columna de imagen -->
          <div class="picture-wrapper">
            <img 
              src="{{ block.settings.image | image_url: width: 1200 }}" 
              alt="{{ block.settings.title }}" 
              class="picture-img" 
              loading="lazy">
          </div>

          <!-- Columna de texto -->
          <div class="text-wrapper">
            <h3 class="text child-slide-descripcion">{{ block.settings.subtitle }}</h3>
            <span class="title">{{ block.settings.title }}</span>
            <a href="{{ block.settings.link }}" class="text button hover-opacity">
              {{ block.settings.button_label }}
            </a>
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "Editorial Carousel",
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "id": "image", "type": "image_picker", "label": "Imagen" },
        { "id": "subtitle", "type": "text", "label": "Subtítulo" },
        { "id": "title", "type": "text", "label": "Título" },
        { "id": "button_label", "type": "text", "label": "Texto botón", "default": "Ver selección >" },
        { "id": "link", "type": "url", "label": "Enlace" }
      ]
    }
  ],
  "presets": [{ "name": "Editorial Carousel" }]
}
{% endschema %}


