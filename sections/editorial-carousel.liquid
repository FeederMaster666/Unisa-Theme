<style>
.editorial-carousel .post-wrapper {
  position: relative;
}

.editorial-carousel .picture-wrapper img {
  width: 100%;
  height: 100%;
  display: block;
}

.editorial-carousel .text-wrapper {
  position: absolute;
  top: 50%;
  left: 40px;
  transform: translateY(-50%);
  background: #fff;
  padding: 20px 30px;
  max-width: 300px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}

.editorial-carousel .text-wrapper h3 {
  font-size: 14px;
  margin: 0 0 10px 0;
  text-transform: uppercase;
}

.editorial-carousel .text-wrapper .title {
  display: block;
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 15px;
}

.editorial-carousel .text-wrapper .button {
  font-size: 14px;
  text-decoration: underline;
  cursor: pointer;
}


</style>

<div class="editorial-carousel swiper">
  <ul class="swiper-wrapper">
    {% for block in section.blocks %}
      <li class="child-post swiper-slide">
        <div class="post-wrapper">
          <div class="picture-wrapper">
            <img src="{{ block.settings.image | image_url: width: 1200 }}" alt="{{ block.settings.title }}">
          </div>
          <a href="{{ block.settings.link }}">
            <div class="text-wrapper show-post">
              <h3 class="child-slide-descripcion">{{ block.settings.subtitle }}</h3>
              <span class="title">{{ block.settings.title }}</span>
              <span class="text button hover-opacity">{{ block.settings.button_label }}</span>
            </div>
          </a>
        </div>
      </li>
    {% endfor %}
  </ul>
  <!-- Controles Swiper -->
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-pagination"></div>
</div>


<script>
let slideIndex = 0;
const slides = document.querySelectorAll('.carousel-slide');
const container = document.getElementById('carouselContainer');

function showSlide(index) {
  container.style.transform = `translateX(-${index * 100}%)`;
}

setInterval(() => {
  slideIndex = (slideIndex + 1) % slides.length;
  showSlide(slideIndex);
}, 4000); // cambia de slide cada 4s
</script>

{% schema %}
{
  "name": "Editorial Carousel",
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "id": "image", "type": "image_picker", "label": "Imagen" },
        { "id": "subtitle", "type": "text", "label": "Subtítulo" },
        { "id": "title", "type": "text", "label": "Título" },
        { "id": "button_label", "type": "text", "label": "Texto botón", "default": "Ver selección >" },
        { "id": "link", "type": "url", "label": "Enlace" }
      ]
    }
  ],
  "presets": [{ "name": "Editorial Carousel" }]
}
{% endschema %}