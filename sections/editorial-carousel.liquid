<style>
.block-posts {
  width: 100%;
  overflow: hidden;
}

.child-post {
  width: 300px; /* Ajusta según necesites */
  flex-shrink: 0;
}

.post-wrapper {
  position: relative;
  border-radius: 8px;
  overflow: hidden;
}

.picture-wrapper {
  width: 100%;
  height: 200px;
  overflow: hidden;
}

.picture-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.text-wrapper {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.7));
  color: white;
  padding: 20px;
}

</style>

<div class="block-posts swiper-container">
  <ul class="childs-slider swiper-wrapper">
    <!-- Cada slide -->
    <li class="child-post swiper-slide">
      <div class="post-wrapper">
        <div class="picture-wrapper">
          <picture class="image-wrapper">
            <source media="(orientation: portrait)" srcset="imagen-portrait.jpg">
            <source media="(orientation: landscape)" srcset="imagen-landscape.jpg">
            <img class="picture-img" src="imagen-landscape.jpg" alt="Descripción" loading="lazy">
          </picture>
        </div>
        <a href="enlace-destino">
          <div class="text-wrapper show-post">
            <h3 class="text child-slide-descripcion">Título descriptivo</h3>
            <span class="title">Título principal</span>
            <span class="text button hover-opacity">Ver más ></span>
          </div>
        </a>
      </div>
    </li>
    <!-- Más slides... -->
  </ul>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
  const swiper = new Swiper('.block-posts', {
    slidesPerView: 'auto',
    spaceBetween: 20,
    freeMode: true,
    loop: false,
    breakpoints: {
      768: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      },
      1200: {
        slidesPerView: 4,
      }
    }
  });
});
</script>
{% schema %}
{
  "name": "Editorial Carousel",
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "id": "image", "type": "image_picker", "label": "Imagen" },
        { "id": "subtitle", "type": "text", "label": "Subtítulo" },
        { "id": "title", "type": "text", "label": "Título" },
        { "id": "button_label", "type": "text", "label": "Texto botón", "default": "Ver selección >" },
        { "id": "link", "type": "url", "label": "Enlace" }
      ]
    }
  ],
  "presets": [{ "name": "Editorial Carousel" }]
}
{% endschema %}