<style>
/* Carrusel editorial estilo Unisa */
.custom-carousel {
  position: relative;
  max-width: 100%;
  margin: 0 auto;
  overflow: hidden;
}

.carousel-container {
  display: flex;
  transition: transform 0.6s ease;
}

.carousel-slide {
  min-width: 100%;
  position: relative;
  height: 600px;
}

.carousel-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.text-overlay {
  position: absolute;
  left: 60px;
  bottom: 60px;
  background: transparent;
  padding: 0;
  max-width: 50%;
}

.text-overlay h3 {
  font-size: 28px;
  font-weight: 400;
  text-transform: uppercase;
  color: #222;
  margin-bottom: 10px;
}

.text-overlay p {
  font-size: 14px;
  color: #444;
  line-height: 1.6;
  margin-bottom: 15px;
}

.text-overlay a {
  color: #222;
  text-decoration: underline;
  font-size: 14px;
  background: none;
  padding: 0;
}

@media (max-width: 768px) {
  .text-overlay {
    position: static;
    margin: 20px;
    max-width: 100%;
  }
  .carousel-slide {
    height: auto;
  }
  .carousel-slide img {
    height: 300px;
    object-fit: cover;
  }
}

</style>

<div class="custom-carousel">
  <div class="carousel-container" id="carouselContainer">
    {% for block in section.blocks %}
      <div class="carousel-slide">
        <img src="{{ block.settings.image | image_url: width: 1600 }}" alt="{{ block.settings.title }}">
        <div class="text-overlay">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.text }}</p>
          <a href="{{ block.settings.link }}">{{ block.settings.button_label }}</a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>


<script>
let slideIndex = 0;
const slides = document.querySelectorAll('.carousel-slide');
const container = document.getElementById('carouselContainer');

function showSlide(index) {
  container.style.transform = `translateX(-${index * 100}%)`;
}

setInterval(() => {
  slideIndex = (slideIndex + 1) % slides.length;
  showSlide(slideIndex);
}, 4000); // cambia de slide cada 4s
</script>

{% schema %}
{
  "name": "Carrusel Editorial Unisa",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Texto descriptivo"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Texto del botón",
          "default": "Ver más"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Carrusel Editorial Unisa",
      "category": "Custom"
    }
  ]
}

{% endschema %}
